{
  "extends": "@repo/typescript-config/bun.json",
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ],
  "exclude": [
    "node_modules","dist",
    "build",
  ],
  "compilerOptions": {
     "paths": {
      "#/*": ["./src/*"]
    },
    "baseUrl": ".",
    "outDir": "./dist",
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext",
  }
  
}
